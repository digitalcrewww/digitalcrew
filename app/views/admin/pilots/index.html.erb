<h1>Applications</h1>

<% if @pilots.any? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @pilots.each do |pilot| %>
        <tr>
          <td><%= pilot.username %></td>
          <td><%= pilot.email %></td>
          <td>
            <%= button_to 'Accept', admin_pilot_path(pilot), method: :patch %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>There are no pilots waiting to be accepted at this time.</p>
<% end %>